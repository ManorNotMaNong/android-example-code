<manifest
    package="com.github.jiahuanyu.example"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- UI Start -->
        <activity
            android:name=".ui.UIMenuActivity"
            android:label="@string/title_activity_ui_menu"/>

        <activity
            android:name=".ui.ServiceDialogActivity"
            android:label="@string/title_activity_service_dialog"/>

        <activity
            android:name=".ui.DropDownMenuActivity"
            android:label="@string/title_activity_drop_down_menu"/>

        <activity
            android:name=".ui.LargeImageViewActivity"
            android:label="@string/title_activity_large_image_view"/>

        <activity
            android:name=".ui.GridViewSortActivity"
            android:label="@string/title_activity_sort_grid_view"/>

        <activity
            android:name=".ui.EmptyViewActivity"
            android:label="@string/title_activity_empty_view"/>

        <activity
            android:name=".ui.PreferenceEntranceActivity"
            android:label="@string/title_activity_preference"/>

        <activity
            android:name=".ui.PreferenceActivity"
            android:label="Android Native Preference"/>

        <activity
            android:name=".ui.PreferenceSupportActivity"
            android:label="Material Library Preference"/>

        <activity
            android:name=".ui.LayoutInflaterSetFactoryActivity"
            android:label="@string/title_activity_layout_inflater_set_factory"/>
        <!-- UI End -->


        <!-- Sensor Start -->
        <activity
            android:name=".sensor.SensorMenuActivity"
            android:label="@string/title_activity_sensor_menu"/>

        <activity
            android:name=".sensor.AccelerateSensorActivity"
            android:label="@string/title_activity_accelerate_sensor"
            android:windowSoftInputMode="stateHidden"/>
        <!-- Sensor End -->


        <!-- Function Start -->
        <activity
            android:name=".function.FunctionMenuActivity"
            android:label="@string/title_activity_function_menu"/>

        <activity
            android:name=".function.EqualizeActivity"
            android:label="@string/title_activity_equalize"/>
        <!-- Function End -->


        <!-- Service Start -->
        <service android:name=".ui.ServiceDialogActivity$DialogService"></service>
        <!-- Service End -->

    </application>

</manifest>
